<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Xephalon" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
         <item name="colorPrimary">@color/london_hue</item>
        <item name="colorError">#C8102E</item>
    </style>
    <style name="Theme.Xephalon" parent="Base.Theme.Xephalon" />

    <style name="TextH1">
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>
    <style name="Label">
        <item name="android:textSize">22sp</item>
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Button">
        <item name="android:background">@drawable/background_btn</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="Icon">
        <item name="android:tint">@color/white</item>
    </style>
</resources>